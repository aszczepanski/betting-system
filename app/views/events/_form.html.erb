<%= simple_form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <%= f.hidden_field :tournament_id %>
  <div class="field">
    <%= f.check_box :blocked %>
    <%= f.label :blocked %> <br />
  </div>
  <div>
    <%= f.label :correct_answer %><br />
    <%= f.collection_select :correct_answer, @event.answers.order(:name), :id, :name, include_blank: true %><br />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
