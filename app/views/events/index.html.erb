<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Tournament</th>
    <% if can? :create, Bet %>
      <th>Answered</th>
    <% end %>
    <th>Blocked</th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= link_to event.name, event %></td>
    <td><%= event.description %></td>
    <td><%= link_to event.tournament_name, event.tournament %></td>
    <% if can? :create, Bet %>
      <td><%= current_user.answered? event.id %></td>
    <% end %>
    <td><%= event.blocked %></td>
    <td><% if can? :update, Event %>
      <%= link_to 'Edit', edit_event_path(event) %>
    <% end %></td>
    <td><% if can? :delete, Event %>
      <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %></td>
  </tr>
<% end %>
</table>

